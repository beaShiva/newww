<div class="container post">
  <h1 class="main-heading">Popular blog</h1>

  <%  posts.forEach(function(post){ %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src=" css/card2.jpg" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%=post.title%></h5>
      <p class="card-text card-content">  <%=post.content.substring(0,50)+"..."%> </p>
      <p class="card-text"><span style="font-weight:bolder">Article  by:</span> <%=post.name%> </p>
      
      <a class="btn btn-primary" href="/posts/<%=post._id%>">Read More</a>
    </div>
  </div>

  <% }) %>
  
</div>

<div class="container review" >


<h2 id="fh2">WE APPRECIATE YOUR REVIEW!</h2>
<h6 id="fh2">Your review will help us to improve our web hosting quality products, and customer services.</h6>


<form id="feedback" action="/" method="post">
<div class="container center">
 <div class="form-floating">
<h4>Name<span class="input-group-addon"><i class="fa fa-user"></i></span>:</h4>
  <input  name="name" placeholder=" John Doe" class="form-control m-2 w-100"  type="text">
</div>
<div class="form-floating">
 <h4>Email<span class="input-group-addon"><i class="fa fa-envelope"></i></span>:</h4>
  <input name="email" type="email" class="form-control m-2 w-100" placeholder="john.doe@yahoo.com">
</div>
 
 <div class="form-floating">
   <h4>Star<span class="input-group-addon"><i class="fa fa-heart"></i></span>:</h4>
 
 <select class="form-control w-100" name="star" id="rate">
  <option value="1star">1</option>
  <option value="2stars">2</option>
  <option value="3stars">3</option>
  <option value="4stars">4</option>
  <option value="5stars">5</option>
</select>
</div>
<div class="form-floating">
  <h4>Text<span class="input-group-addon"><i class="fas fa-envelope-open-text"></i></span>:</h4>

<textarea class="form-control w-100 m-2 " name="text" id="review" placeholder="write your review" spellcheck="false" rows="3"></textarea>
</div>
  <a href="/" type="btn btn-primary"  class="btn btn-primary"> Submit</a>

</div>
</form>



